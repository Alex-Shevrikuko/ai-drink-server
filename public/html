<script>
const input = document.querySelector(".search-wrapper input");
const bubble = document.getElementById("bubble");
const chosenText = document.getElementById("chosenText");
const drinkInfo = document.getElementById("drinkInfo");
const healthBadge = document.getElementById("healthBadge");
const clearBtn = document.getElementById("clearBtn");
const ratingImage = document.getElementById("ratingImage");


/* ‚≠ê –§–£–ù–ö–¶–ò–Ø –ó–ê –°–ú–Ø–ù–ê –ù–ê –°–ù–ò–ú–ö–ò–¢–ï */
function setRating(rating){

let imageName = "";

if(rating === 1) imageName = "12.png";

if(rating === 2) imageName = "34.png";

if(rating === 3) imageName = "56.png";

if(rating === 4) imageName = "78.png";

if(rating === 5) imageName = "910.png";

ratingImage.src = "images/" + imageName;

}



/* –Ø–≤–Ω–æ –ù–ï –Ω–∞–ø–∏—Ç–∫–∏ */
const notDrinks = [
  "—Ö–ª—è–±",
  "–ø–∏—Ü–∞",
  "–±—É—Ä–≥–µ—Ä",
  "—Ç–µ–ª–µ—Ñ–æ–Ω",
  "–ª–∞–ø—Ç–æ–ø",
  "—Å—Ç–æ–ª",
  "–º–∞—Å–∞",
  "–∫–æ–ª–∞ –∫–æ–ª–∞"
];


input.addEventListener("keydown", function (e) {

if (e.key === "Enter") {

const value = input.value.trim();

if (!value) return;

const text = value.toLowerCase();

bubble.style.display = "block";

chosenText.textContent = `–ò–∑–±—Ä–∞—Ö—Ç–µ: ${value}`;



// ‚ùå –ù–ï –ï –ù–ê–ü–ò–¢–ö–ê

if (notDrinks.includes(text)) {

healthBadge.textContent = "–ù–µ –µ –Ω–∞–ø–∏—Ç–∫–∞";

healthBadge.className = "badge warning";

drinkInfo.textContent =
"–í—ä–≤–µ–¥–µ–Ω–æ—Ç–æ –Ω–µ –∏–∑–≥–ª–µ–∂–¥–∞ –∫–∞—Ç–æ –Ω–∞–ø–∏—Ç–∫–∞.";

setRating(3);

return;

}



// üü¢ –í–û–î–ê

if (text === "–≤–æ–¥–∞") {

healthBadge.textContent = "–î–æ–±—Ä–æ";

healthBadge.className = "badge good";

drinkInfo.textContent =
"–í–æ–¥–∞—Ç–∞ –µ –∑–¥—Ä–∞–≤–æ—Å–ª–æ–≤–Ω–∞, –±–µ–∑ –∑–∞—Ö–∞—Ä –∏ –±–µ–∑ –≤—ä–≥–ª–µ—Ö–∏–¥—Ä–∞—Ç–∏.";

setRating(5);

return;

}



// üî¥ –í–°–ò–ß–ö–û –î–†–£–ì–û

healthBadge.textContent = "–í–Ω–∏–º–∞–≤–∞–π";

healthBadge.className = "badge bad";

drinkInfo.textContent =
"–¢–∞–∑–∏ –Ω–∞–ø–∏—Ç–∫–∞ –º–æ–∂–µ –¥–∞ —Å—ä–¥—ä—Ä–∂–∞ –∑–∞—Ö–∞—Ä.";

setRating(1);

}

});



// ‚ùå CLEAR BUTTON

clearBtn.addEventListener("click", function () {

input.value = "";

bubble.style.display = "none";

chosenText.textContent = "–ò–∑–±—Ä–∞—Ö—Ç–µ:";

drinkInfo.textContent = "";

healthBadge.textContent = "–î–æ–±—Ä–æ";

healthBadge.className = "badge good";

setRating(5);

});

</script>

    
